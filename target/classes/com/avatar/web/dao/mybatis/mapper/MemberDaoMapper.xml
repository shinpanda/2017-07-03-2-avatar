<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="com.avatar.web.dao.MemberDao">

	<select id="getClassId" resultType="String">
		<!-- select name from Class where id=(select classId from MemberClass where memberId = #{id}); -->
		select classId from MemberClass where memberId = #{id}
	</select>


	<insert id="insert" parameterType="com.avatar.web.entity.Member">
		insert into Member(id,pwd,name,email)
		values(#{id}, #{pwd}, #{name}, #{email});
	</insert>
	
	<select id="idCheck" resultType="String">
		select COUNT(*) from Member where memberId=#{id}
	</select>
	

</mapper>    